<script>
/* Hard maintenance toggle (kept for future use) */
const MAINTENANCE = true;

function openBook(bookFile) {
  const saved = localStorage.getItem(bookFile + '-scroll');
  if (saved) {
    if (confirm("ğŸ“Œ Last time you stopped at position " + saved + "px. Continue from there?")) {
      window.location.href = bookFile + "?pos=" + saved;
      return;
    }
  }
  window.location.href = bookFile;
}

/* Disable any elements that might try to call the Mirror */
if (MAINTENANCE) {
  // Ensure any accidental "Ask" buttons are inert
  document.querySelectorAll('button, a.btn').forEach(el => {
    const label = (el.textContent || '').toLowerCase();
    if (label.includes('mirror') && !el.classList.contains('live')) {
      el.addEventListener('click', e => e.preventDefault(), { passive: false });
      el.setAttribute('aria-disabled', 'true');
      el.title = 'Mirror offline';
    }
  });
}

/* Optional: very small offline cache hint to browsers */
try {
  if ('serviceWorker' in navigator) {
    // No external file needed; this registers a no-op to avoid 404 spam if you had SW before
    navigator.serviceWorker.register(URL.createObjectURL(new Blob(
      [`self.addEventListener('install',e=>self.skipWaiting());
        self.addEventListener('activate',e=>self.clients.claim());`],
      { type: 'text/javascript' }
    ))).catch(()=>{});
  }
} catch(_) {}
</script>

